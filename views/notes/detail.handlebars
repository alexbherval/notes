<h2> {{ note.assunto }}</h2>
<div class="d-flex justify-content-center ">
    <img src="/img/UNIABEU_HORIZONTAL.png" alt="" style="width: 30%;">
</div>
<div class="d-flex justify-content-center detailTitle">
    <h6><strong>Nº {{note._id}} </strong></h6>
</div>
<h2 class="text-center"></h2>
<form>
    <input type="hidden" name="id" value="{{note._id}}">
    <div class="row g-2 mb-2 mt-3">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="remetente" name="remetente" disabled
                    placeholder="Insira o nome do remetente" required="true" value="{{ note.remetente }} ">
                <label for="remetente">Remetente</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="setorRemetente" name="setorRemetente" disabled>
                    <option selected>{{ note.setorRemetente }}</option>
                    <option value="Tecnologia da Informação">T.I</option>
                    <option value="Recursos Humanos">RH</option>
                    <option value="Secretaria Acadêmica">Sec. Acadêmica</option>
                </select>
                <label for="setorRemetente">Setor Remetente</label>
            </div>
            
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="unidEnsino" name="unidEnsino" disabled>
                    <option>{{ note.unidEnsino}}</option>
                </select>
                <label for="unidEnsino">Unidade:</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="isSend" name="isSend" disabled>
                    <option>{{ note.isSend}}</option>
                </select>
                <label for="isSend">Status:</label>
            </div>
        </div>


    </div>
    <div class="row g-2 mb-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="assunto" name="assunto " disabled
                    placeholder="Insira o nome do requerente" required="true" value="{{ note.description.assunto }}">
                <label for="assunto">Assunto</label>
            </div>
        </div>
                <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="item" name="item" placeholder="Insira o nome do requerente"
                    disabled value="{{ note.description.item }}">
                <label for="assunto">Item:</label>
            </div>
        </div>


    </div>
    <div class="row g-2 mb-2">
        <div class="form-floating">
            <textarea class="form-control" placeholder="Insira seu comunicado" id="description" style="height: 100px"
                name="description" disabled>{{ note.description.descritivo }}</textarea>
            <label for="Description">Descrição:</label>
        </div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="destinatario" placeholder="Insira o nome do requerente"
                    name="destinatario" disabled value="{{ note.destinatario }}">
                <label for="destinatario">Destinatário</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" disabled id="setorDestinatario" name="setorDestinatario"
                    value="{{ note.setorDestinatario}}">
                    <option selected>{{ note.setorDestinatario }}</option>
                    <option value="Tecnologia da Informação">T.I</option>
                    <option value="Recursos Humanos">RH</option>
                    <option value="Secretaria Acadêmica">Sec. Acadêmica</option>
                </select>
                <label for="setorDestinatario">Setor de Destino</label>
            </div>
        </div>
                <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="UnidDestino" name="UnidDestino" disabled>
                        <option >{{ note.unidEnsino }}</option>
                </select>
                <label for="UnidDestino">Unidade de Destino</label>
            </div>
        </div>
    </div>
    <div class="row g-2 mb-2">
        <div class="form-floating">
            <textarea class="form-control" placeholder="Descreva sua objervação" id="obsCi" style="height: 100px"
                name="obsCi" disabled>{{ note.obsCi }}</textarea>
            <label for="obsCi">Observações:</label>
        </div>
    </div>
    <a class="btn btn-primary" href="/" role="button">Voltar</a>
</form>