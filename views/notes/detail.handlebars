<h2> {{ note.assunto }}</h2>

<h2 class="text-center"></h2>
<form >
    <div class="row g-2 mb-2 mt-3">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="remetente" name="remetente"
                    placeholder="Insira o nome do remetente" required="true" value="{{ note.remetente }}"disabled>
                <label for="remetente">Remetente</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="setorRemetente" name="setorRemetente" disabled>
                    <option selected>{{ note.setorRemetente }}</option>
                    <option value="Tecnologia da Informação">T.I</option>
                    <option value="Recursos Humanos">RH</option>
                    <option value="Secretaria Acadêmica">Sec. Acadêmica</option>
                </select>
                <label for="setorRemetente">Setor Solicitante</label>
            </div>
        </div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="assunto" name="assunto"
                    placeholder="Insira o nome do requerente" required="true" value="{{ note.description.assunto }}" disabled>
                <label for="assunto">Assunto</label>
            </div>
        </div>

    </div>

    <div class="row g-2 mb-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="item" name="item" placeholder="Insira o nome do requerente"
                    required="true" value="{{ note.description.item }}"disabled>
                <label for="assunto">Item:</label>
            </div>
        </div>

    </div>
    <div class="row g-2 mb-2">
        <div class="form-floating">
            <textarea class="form-control" placeholder="Insira seu comunicado" id="description" style="height: 100px"
                name="description" disabled>{{ note.description.descritivo }}</textarea>
            <label for="Description">Descrição:</label>
        </div>
    </div>

    <div class="row g-2 mb-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="destinatario" placeholder="Insira o nome do requerente"
                    name="destinatario" value="{{ note.destinatario }}" disabled>
                <label for="destinatario">Destinatário</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="setorDestinatario" name="setorDestinatario" value="{{ note.setorDestinatario}}" disabled>
                    <option selected>{{ note.setorDestinatario }}</option>
                    <option value="Tecnologia da Informação">T.I</option>
                    <option value="Recursos Humanos">RH</option>
                    <option value="Secretaria Acadêmica">Sec. Acadêmica</option>
                </select>
                <label for="setorDestinatario">Setor de Destino</label>
            </div>
        </div>

    </div>
    <div class="row g-2 mb-2">
        <div class="form-floating">
            <textarea class="form-control" placeholder="Descreva sua objervação" id="obsCi" style="height: 100px"
                name="obsCi" disabled >{{ note.obsCi }}</textarea>
            <label for="obsCi">Observações:</label>
        </div>



    </div>
        <a class="btn btn-primary" href="/" role="button">Voltar</a>
</form>