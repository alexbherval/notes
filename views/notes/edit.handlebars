
<div class="d-flex justify-content-center ">
<img src="/img/UNIABEU_HORIZONTAL.png" alt="" style="width: 30%;">
</div>
<h2 class="text-center"></h2>
<form action="/notes/update" method="post">
    <input type="hidden" name="id" value="{{note._id}}">
    <div class="row g-2 mb-2 mt-3">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="remetente" name="remetente"
                    placeholder="Insira o nome do remetente" required="true" value="{{ note.remetente }}">
                <label for="remetente">Remetente</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="setorRemetente" name="setorRemetente" >
                    <option >{{ note.setorRemetente }}</option>
                    <option value="Belford Roxo">BelFord Roxo</option>
                    <option value="Nilópolis">Nilópolis</option>
                    <option value="Nova Iguaçu">Nova Iguaçu</option>
                </select>
                <label for="setorRemetente">Setor Remetente:</label>
            </div>            
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="unidEnsino" name="unidEnsino" >
                    <option >{{ note.unidEnsino }}</option>
                    <option value="Belford Roxo">Belford Roxo</option>
                    <option value="Nilópolis">Nilópolis</option>

                </select>
                <label for="unidEnsino">Unidade</label>
            </div>            
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="isSend" name="isSend" >
                    <option hidden>{{ note.isSend }}</option>
                    <option value="Aguardando Transporte">Aguardando Transporte</option>
                    <option value="Arquivado">Arquivado</option>
                    <option value="Malote Enviado">Malote Enviado</option>
                    <option value="Malote Recebido">Malote Recebido</option>
                    <option value="Deletado">Deletado</option>

                </select>
                <label for="isSend">Status:</label>
            </div>            
        </div>

    </div>
    <div class="row g-2 mb-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="assunto" name="assunto"
                    placeholder="Insira o nome do requerente" required="true" value="{{ note.description.assunto }}" >
                <label for="assunto">Assunto</label>
            </div>
        </div>
                <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="item" name="item" placeholder="Insira o nome do requerente"
                     value="{{ note.description.item }}">
                <label for="assunto">Item:</label>
            </div>
        </div>
    </div>
    <div class="row g-2 mb-2">

    </div>
    <div class="row g-2 mb-2">
        <div class="form-floating">
            <textarea class="form-control" placeholder="Insira seu comunicado" id="description" style="height: 100px"
                name="description" >{{ note.description.descritivo }}</textarea>
            <label for="Description">Descrição:</label>
        </div>
    </div>
    <div class="row g-2 mb-2">
        <div class="col-md">
            <div class="form-floating">
                <input type="text" class="form-control" id="destinatario" placeholder="Insira o nome do requerente"
                    name="destinatario" value="{{ note.destinatario }}" >
                <label for="destinatario">Destinatário</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <select class="form-select" id="setorDestinatario" name="setorDestinatario" value="{{ note.setorDestinatario}}" >
                    <option hidden>{{ note.setorDestinatario }}</option>
                    <option value="Tecnologia da Informação">Tecnologia da Informação</option>
                    <option value="Recursos Humanos">Recursos Humanos</option>
                    <option value="Secretaria Acadêmica">Secretaria Acadêmica Acadêmica</option>
                </select>
                <label for="setorDestinatario">Setor de Destino</label>
            </div>
        </div>
    </div>
    <div class="row g-2 mb-2">
        <div class="form-floating">
            <textarea class="form-control" placeholder="Descreva sua objervação" id="obsCi" style="height: 100px"
                name="obsCi"  >{{ note.obsCi }}</textarea>
            <label for="obsCi">Observações:</label>
        </div>
    </div>   
     <button type="submit" class="btn btn-primary mb-3">Salvar</button>
</form>